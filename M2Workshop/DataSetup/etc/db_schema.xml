<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
  <table name="car" resource="" engine="innodb">
    <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true"/>
    <column xsi:type="varchar" name="name" nullable="false"/>
    <column xsi:type="varchar" name="color" nullable="true" length="16"/>
    <constraint xsi:type="primary" name="PRIMARY">
      <column name="entity_id"/>
    </constraint>
    <constraint xsi:type="unique" referenceId="CAR_INDEX_UNIQUIE_COLOR">
      <column name="color"/>
    </constraint>
  </table>
</schema>
